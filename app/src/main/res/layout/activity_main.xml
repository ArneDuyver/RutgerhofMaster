<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_btn_restaurant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/buttonColor"
        android:padding="32dp"
        android:text="@string/main_btn_restaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_btn_taverne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@color/buttonColor"
        android:padding="32dp"
        android:text="@string/main_btn_taverne"
        app:layout_constraintBottom_toTopOf="@+id/main_btn_terras"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_restaurant"
        app:layout_constraintStart_toStartOf="@+id/main_btn_restaurant"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_restaurant" />

    <Button
        android:id="@+id/main_btn_terras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:background="@color/buttonColor"
        android:padding="32dp"
        android:text="@string/main_btn_terras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_restaurant"
        app:layout_constraintStart_toStartOf="@+id/main_btn_restaurant" />
</androidx.constraintlayout.widget.ConstraintLayout>